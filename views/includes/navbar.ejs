<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    white-space: nowrap; /* Prevents button text from wrapping */
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }

  .navbar {
    position: sticky;
    top: 0;
    z-index: 1000; /* Ensure it sits on top of other elements */
    background-color: #fff; /* Ensure background color is set to avoid transparency issues */
    border-bottom: 1px solid #ddd; /* Optional: to add a border for better visibility */
  }

  .navbar-nav {
    display: flex;
    align-items: center;
  }

  .navbar-nav .nav-link {
    margin-left: 1rem;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .navbar-toggler {
      display: none; /* Hide hamburger icon on mobile */
    }

    .navbar-collapse {
      flex-direction: column;
      align-items: center;
      width: 100%;
    }

    .navbar-brand {
      margin-bottom: 1rem;
    }

    .navbar-nav {
      width: 100%;
      flex-direction: column;
      align-items: center;
      padding: 0 1rem;
    }

    .search-form {
      display: flex;
      flex-direction: row;
      width: 100%;
      margin-bottom: 1rem;
      justify-content: center; /* Center the form */
    }

    .search-input {
      flex: 1; /* Take up remaining space */
      margin-right: 0.5rem; /* Space between input and button */
    }

    .btn-search {
      flex-shrink: 0; /* Prevent button from shrinking */
      width: auto; /* Let button width be as required */
    }

    /* Mobile Bottom Navbar */
    .navbar-custom {
      position: fixed;
      bottom: 0;
      width: 100%;
      background-color: #fff;
      border-top: 1px solid #ddd;
      display: flex;
      justify-content: space-around;
      padding: 0.5rem 0;
      z-index: 999;
    }

    .navbar-custom .nav-item {
      text-align: center;
      flex-grow: 1;
    }

    .navbar-custom .nav-link {
      color: #fe424d;
      font-size: 1rem;
    }
  }

  @media (min-width: 769px) {
    .navbar-toggler {
      display: none;
    }

    .navbar-nav.ms-auto {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-right: 1rem;
    }

    /* No bottom navbar for larger screens */
    .navbar-custom {
      display: none;
    }
  }
  /* Search Form Container */
.search-form-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff; /* Ensure it stands out */
  padding: 0.5rem;
  border-bottom: 1px solid #ddd;
  z-index: 999; /* Ensure it sits on top of other elements */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Form Styles */
.search-form-container form {
  display: flex;
  width: 100%;
  max-width: 1200px; /* Optional: set a max-width for larger screens */
}

/* Input and Button Styles */
.search-input {
  border-radius: 25px;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  flex: 1;
}

.btn-search {
  background-color: #fe424d;
  color: #fff;
  border-radius: 25px;
  padding: 0 1rem;
}

.btn-search:hover {
  background-color: #fe424d;
  color: #fff;
}

.btn-search i {
  display: inline;
  margin-right: 0.5rem;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .search-input {
    width: calc(100% - 2rem); /* Adjust width for mobile */
  }

  .btn-search {
    width: calc(100% - 2rem); /* Adjust button width for mobile */
  }
}

</style>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
  <!-- Include your CSS here -->
</head>
<body>
  <!-- Top Navbar -->
   <!-- Search Form -->
    

  <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings">
        <i class="fa-solid fa-compass"></i>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <!-- Search Bar (visible on mobile and larger screens) -->
        <div class="navbar-nav ms-auto">
          <form class="d-flex search-form" role="search">
            <input class="form-control me-2 search-input" type="search" placeholder="Search destination" aria-label="Search">
            <button class="btn btn-search" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>Search
            </button>
          </form>
        </div>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new"><i>Wanderlust your home</i></a>
          <% if(!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
          <% if(currUser) { %>
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Bottom Navbar -->
  <nav class="navbar-custom">
    <div class="nav-item">
      <a class="nav-link active" href="/listings">
        <i class="fa-solid fa-search"></i>
        Explore
      </a>
    </div>

    <% if(currUser) { %>
      <div class="nav-item">
        <a class="nav-link" href="/listings/new">
          <i class="fa-solid fa-home"></i>
          Wanderlust your home
        </a>
      </div>
    <% } %>

    <% if(!currUser) { %>
      <div class="nav-item">
        <a class="nav-link" href="/signup">
          <i class="fa-solid fa-user-plus"></i>
          Sign up
        </a>
      </div>
      <div class="nav-item">
        <a class="nav-link" href="/login">
          <i class="fa-solid fa-user"></i>
          Log in
        </a>
      </div>
    <% } else { %>
      <div class="nav-item">
        <a class="nav-link" href="/logout">
          <i class="fa-solid fa-sign-out-alt"></i>
          Log out
        </a>
      </div>
    <% } %>
  </nav>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
